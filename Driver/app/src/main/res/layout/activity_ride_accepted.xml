<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ActivityRideAccepted">

        <LinearLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/rect_box_outline"
                android:gravity="center"
                android:text="name"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/rect_box_outline"
                android:gravity="center"
                android:text="phone"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/userSrc"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/rect_box_outline"
                android:gravity="center"
                android:text="origin"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/userDst"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="25dp"
                android:background="@drawable/rect_box_outline"
                android:gravity="center"
                android:text="destination"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect_box_outline"
                android:gravity="center"
                android:hint="OTP"
                android:textAlignment="center"
                android:textColor="@color/txtColor"
                android:inputType="number"/>

            <Button
                android:id="@+id/btn_startRide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rect_box_solid"
                android:text="START RIDE" />

            <Button
                android:id="@+id/btn_cancelRide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rect_box_solid"
                android:text="cancel" />
        </LinearLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>