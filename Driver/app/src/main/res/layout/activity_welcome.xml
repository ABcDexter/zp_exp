<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zp_driver.ActivityWelcome"
    android:background="@drawable/black_background1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HI!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="50sp"
        android:id="@+id/tx_hi"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" I AM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="50sp"
        android:id="@+id/tx_am"
        android:layout_below="@id/tx_hi"
        android:textColor="@android:color/white"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/zbee_right"
        android:layout_above="@id/zippe_logo"
        android:id="@+id/iv_zippee"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/zippe_logo"
        android:layout_centerInParent="true"
        android:id="@+id/zippe_logo"/>

    <ImageView
        android:id="@+id/iv_zippee_bottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/zippe_logo"
        android:src="@drawable/zbee_left" />
</RelativeLayout>