<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ActivityRideInProgress">

        <RelativeLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableBottom="@drawable/ic_current_pin"
                android:text="Drop point"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:id="@+id/dropPnt"/>
            <View
                android:id="@+id/line"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#F3F3F6"
                android:layout_below="@+id/dropPnt"
                android:layout_above="@+id/pickPnt"/>

            <TextView
                android:id="@+id/next2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
                android:drawableStart="@drawable/ic_circle"
                android:text="NEXT LOC 2"
                android:textSize="20sp"
                android:layout_above="@+id/next1"
                android:layout_marginBottom="50dp"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
                android:drawableStart="@drawable/ic_circle"
                android:layout_above="@id/nearest"
                android:text="NEXT LOC 1"
                android:textSize="20sp"
                android:layout_marginBottom="100dp"
                android:textAllCaps="true"/>


            <TextView
                android:id="@+id/nearest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
                android:drawableStart="@drawable/ic_circle"
                android:layout_centerInParent="true"
                android:text="Nearest"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/prev1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_toLeftOf="@id/line"
                android:drawableEnd="@drawable/ic_circle"
                android:text="PREV LOC 1"
                android:textSize="20sp"
                android:layout_below="@id/nearest"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/prev2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toLeftOf="@id/line"
                android:textAlignment="center"
                android:drawableEnd="@drawable/ic_circle"
                android:text="PREV LOC 2"
                android:layout_below="@id/prev1"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_current_pin"
                android:text="pick point"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:textAllCaps="true"
                android:id="@+id/pickPnt"
                android:layout_above="@+id/btn_endRide"
                android:layout_marginBottom="30dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="End ride"
                android:textAllCaps="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rect_box_solid"
                android:id="@+id/btn_endRide"/>
        </RelativeLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>