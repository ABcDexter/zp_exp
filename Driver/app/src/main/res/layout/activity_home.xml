<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ActivityHome">

        <RelativeLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Switch
                android:id="@+id/dutyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:layout_marginTop="12dp"
                android:checked="false"
                android:text="Off Duty"
                android:textColor="@color/txtColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@id/dutyStatus"
                android:text="On Duty"
                android:textColor="@color/txtColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/line"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_below="@id/dutyStatus"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="#F3F3F6" />

            <TextView
                android:id="@+id/nxtLoc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
                android:drawableStart="@drawable/ic_circle"
                android:text="NEXT LOC 2"
                android:textSize="20sp"
                android:layout_above="@+id/nxtLoc1"
                android:layout_marginBottom="50dp"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/nxtLoc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
                android:drawableStart="@drawable/ic_circle"
                android:layout_above="@id/nearest"
                android:text="NEXT LOC 1"
                android:textSize="20sp"
                android:layout_marginBottom="100dp"
                android:textAllCaps="true"/>


            <TextView
                android:id="@+id/nearest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/line"
                android:drawableStart="@drawable/ic_circle"
                android:layout_centerInParent="true"
                android:text="Nearest"
                android:textSize="20sp"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/prevLoc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_toLeftOf="@id/line"
                android:drawableEnd="@drawable/ic_circle"
                android:text="PREV LOC 1"
                android:textSize="20sp"
                android:layout_below="@id/nearest"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/prevLoc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_toLeftOf="@id/line"
                android:textAlignment="center"
                android:drawableEnd="@drawable/ic_circle"
                android:text="PREV LOC 2"
                android:layout_below="@id/prevLoc1"
                android:textSize="20sp"
                android:textAllCaps="true"/>
        </RelativeLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>