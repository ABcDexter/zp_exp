<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Delivery"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/rl_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/ln_lnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/srcTxt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Source :"
                            android:textAllCaps="true"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/srcLnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/srcTxt"
                            android:text="Source Landmark"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/dstTxt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Destination :"
                            android:textAllCaps="true"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/dstLnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_toEndOf="@+id/dstTxt"
                            android:text="Dst Landmark"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="20sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ln_lnd"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/reject_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_close"
                        android:text="no"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/txtColor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/accept_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/ic_check"
                        android:text="yes"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/txtColor"
                        android:textSize="18sp" />
                </LinearLayout>
            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
