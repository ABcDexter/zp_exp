<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewRateActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="enjoyed your ride"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp"
                android:padding="5dp"
                android:layout_marginBottom="10dp"/>

            <ImageButton
                android:id="@+id/satisfied"
                android:src="@drawable/ic_mood_satisfied"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:background="@drawable/aadhar_container"
                android:padding="15dp"
                android:scaleType="centerInside"/>

            <include
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:id="@+id/notSatisfied"
                android:src="@drawable/ic_mood_bad"
                android:layout_gravity="center"
                android:background="@drawable/aadhar_container"
                android:padding="15dp"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="ride was not good"
                android:textAllCaps="true"
                android:textSize="23sp" />

        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>