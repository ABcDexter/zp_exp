<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background1"
    tools:context=".ActivityWelcome">

    <TextView
        android:id="@+id/tx_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="HI!"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:onClick="nextActivity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_hi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text=" I AM"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/iv_zippee"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/zippe_logo"
        android:src="@drawable/zbee_right" />

    <ImageView
        android:id="@+id/zippe_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/zippe_logo" />

    <ImageView
        android:id="@+id/iv_zippee_bottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/zippe_logo"
        android:src="@drawable/zbee_left" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ride"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45sp"
        android:text="CHOOSE MODULE"
        android:textColor="@android:color/white"
        android:textSize="23sp" />-->

    <ImageButton
        android:id="@+id/btn_ride"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_rent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bkg"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ride" />

    <ImageButton
        android:id="@+id/btn_rent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_deliver"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bkg"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/rent" />

    <ImageButton
        android:id="@+id/btn_deliver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bkg"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/delivery" />

</RelativeLayout>