<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_rent_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Enjoy your trip"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/txtsupern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtE"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Drop point contact"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/layoutZippeee">

                    <ImageView
                        android:id="@+id/photo_sup"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_account_box" />

                    <TextView
                        android:id="@+id/supervisor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:layout_toEndOf="@id/photo_sup"
                        android:text="Mr. XYZ"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <RelativeLayout
                        android:id="@+id/rl_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/supervisor_name"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/photo_sup">

                        <TextView
                            android:id="@+id/supervisor_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:text="+91 7060743705"
                            android:textAllCaps="true"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/supervisor_phone"
                            android:src="@drawable/phone" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/v_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_p"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/txtv"
                        android:text="UK 04 B2632"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rl_p"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/photo_sup"
                        android:text="VEH. NO. :"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_no"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/photo_sup"
                        android:text="REMAINING MINS :"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/remaining_hrs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/v_no"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@id/txt"
                        android:text="60"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                </RelativeLayout>

                <include
                    android:id="@+id/layoutZippeee"
                    layout="@layout/zippe_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginBottom="50dp"/>

                <LinearLayout
                    android:id="@+id/txt_drop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/layoutZippeee"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_box_outline"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/drop_hub"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableEnd="@drawable/ic_edit"
                        android:gravity="center|start"
                        android:paddingEnd="12dp"
                        android:paddingStart="10dp"
                        android:text="change DROP POINT"
                        android:textAllCaps="true"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_cost"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt_drop"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_box_outline"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/hours"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableEnd="@drawable/ic_edit"
                        android:gravity="center|start"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="Extend no of Hours"
                        android:textAllCaps="true"
                        android:textSize="20sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/emergency"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/rl_cost"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_box_outline"
                    android:drawableEnd="@drawable/ic_emergency_call"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:text="emergency support"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

               <!-- <TextView
                    android:id="@+id/share_ride_details"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/emergency"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_box_outline"
                    android:drawableEnd="@drawable/ic_share"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:text="share ride details"
                    android:textAllCaps="true"
                    android:textSize="20sp" />-->

                <TextView
                    android:id="@+id/share_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/emergency"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rect_box_outline"
                    android:drawableEnd="@drawable/ic_location"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:text="share live location"
                    android:textAllCaps="true"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/end_rent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/ll"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/end_ride" />
        </RelativeLayout>

    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>