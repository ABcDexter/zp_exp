<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_rent_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Enjoy your trip"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtsupern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtE"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Drop point supervisor"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtsupern"
                android:layout_marginTop="20dp">

                <!--<ImageView
                    android:id="@+id/photo_super"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_account_box" />-->
                <LinearLayout
                    android:id="@+id/ll_supern"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@id/txtsupern"
                        android:layout_weight="1"
                        android:text="name :"
                        android:textAllCaps="true"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/supervisor_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toEndOf="@id/txtsupern"
                        android:layout_weight="1"
                        android:text="Mr. RAM KUMAR"
                        android:textAllCaps="true"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:layout_below="@+id/ll_supern"
                    android:id="@+id/ll_phone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="phone :"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/supervisor_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableEnd="@drawable/ic_phone"
                        android:text="+91 7060743705"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2"
                    android:layout_below="@+id/ll_phone"
                    android:id="@+id/ll_vehicle">
                <TextView
                    android:id="@+id/txtv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="vehicle no :"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/v_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UK 04 B2632"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/ll_vehicle"
                    android:weightSum="2"
                    android:id="@+id/ll_min">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="REMAINING MINS : "
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/remaining_hrs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="xxx"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_weight="1"/>
                </LinearLayout>

            </RelativeLayout>

            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/txt_drop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layoutZippeee"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drop_hub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="change DROP POINT"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/txt_drop"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:weightSum="2">

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="change no of Hours"
                    android:textAllCaps="true"
                    android:textSize="23sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/share_ride_details"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rl_cost"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_share"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="share ride details"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/emergency"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/share_ride_details"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_emergency_call"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="emergency support"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/end_rent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/end_ride"
                android:textAllCaps="true" />
        </RelativeLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>