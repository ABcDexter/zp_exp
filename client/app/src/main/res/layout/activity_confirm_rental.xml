<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="confirm rental"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_motorcycle" />

            <TextView
                android:id="@+id/v_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="UK 04 B2632"
                android:textAllCaps="true"
                android:textSize="18sp" />


            <include
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="70dp" />


            <TextView
                android:id="@+id/hoursNo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_edit"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="No of Hours"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/timingTxt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_edit"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Timing"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:text="please pay -"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/payRental"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="200"
                    android:drawableStart="@drawable/ic_rupee"
                    android:textAllCaps="true"
                    android:textSize="23sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/wallet"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_box_outline"
                    android:drawableEnd="@drawable/ic_rupee"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:text="wallet"
                    android:textAllCaps="true"
                    android:textSize="23sp" />


                <TextView
                    android:id="@+id/upiRental"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_box_outline"
                    android:drawableEnd="@drawable/ic_bhim"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:text="upi"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/confirmRental"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="50dp"
                android:background="@drawable/confirm" />
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>
