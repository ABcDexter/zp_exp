<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:id="@+id/containerPhnNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sarpanch"
            android:text="REVIEW YOUR PROFILE FOR"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/zippe_logo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/textView"
            android:src="@drawable/zippe_logo" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/zippe_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_box_outline"
            android:drawableEnd="@drawable/ic_edit"
            android:gravity="center"
            android:hint="NAME"
            android:padding="5dp"
            android:textAllCaps="true"
            android:textColor="@color/txtColor"
            android:textSize="23sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_box_outline"
            android:padding="5dp"
            android:layout_below="@+id/zippe_logo"
            android:id="@+id/rl_saveName"
            android:visibility="invisible">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:drawableEnd="@drawable/ic_check"
                android:gravity="center"
                android:hint="NAME"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="23sp"
                android:id="@+id/edt_name"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/saveName"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ic_check" />
        </RelativeLayout>



        <TextView
            android:id="@+id/txt_age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_box_outline"
            android:gravity="center"
            android:padding="5dp"
            android:text="AGE"
            android:textAllCaps="true"
            android:textColor="@color/txtColor"
            android:textSize="23sp" />

        <Button
            android:id="@+id/btnGender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/txt_age"
            android:layout_marginTop="20dp"
            android:background="@drawable/rect_box_outline"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:entries="@array/gender_array"
            android:gravity="center"
            android:padding="5dp"
            android:text="GENDER"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="23sp" />

        <ImageButton
            android:id="@+id/confirmDetails"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/btnGender"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bkg"
            android:padding="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/confirm"
            android:visibility="visible" />
    </RelativeLayout>
</ScrollView>