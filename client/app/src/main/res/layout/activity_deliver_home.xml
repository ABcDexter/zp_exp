<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewRentRide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="YOU have selected \nDeliver"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/content_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/layoutZippeee"
                android:layout_marginTop="50dp"
                android:background="@drawable/rect_box_outline"
                android:entries="@array/content_array"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:textAllCaps="true" />


            <Spinner
                android:id="@+id/content_size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/content_type"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:entries="@array/size_array"
                android:gravity="center"
                android:spinnerMode="dropdown"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/txt_pick_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/txt_drop_address"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect_box_outline"
                android:drawableStart="@drawable/ic_three_forward_arrow"
                android:gravity="end|center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="PICK UP POINT"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_drop_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/layoutZippeee"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_three_back_arrow"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="DROP POINT"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/confirm_deliver"
                android:text="@string/disclaimer"
                android:textSize="12sp"/>

            <ImageButton
                android:id="@+id/confirm_deliver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/confirm"
                android:textAllCaps="true" />
        </RelativeLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>