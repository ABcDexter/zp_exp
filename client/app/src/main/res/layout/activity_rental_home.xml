<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Choose package"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <Spinner
                android:id="@+id/no_hours"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                android:background="@drawable/rect_box_outline"
                android:entries="@array/hours_array"
                android:layout_below="@id/layoutZippeee"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/timing"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:background="@drawable/rect_box_outline"
                android:gravity="center"
                android:layout_below="@id/no_hours"
                android:padding="12dp"
                android:text="TIMING"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pickup_pt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/drop_pt"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rect_box_outline"
                android:drawableStart="@drawable/ic_three_forward_arrow"
                android:gravity="end|center"
                android:padding="5dp"
                android:text="PICK UP POINT"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/drop_pt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@+id/layoutZippeee"
                android:layout_marginBottom="70dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_three_back_arrow"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="DROP POINT"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true" />

            <ImageButton
                android:id="@+id/confirm_rental"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/confirm"
                android:textAllCaps="true" />

        </RelativeLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>