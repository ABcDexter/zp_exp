<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_ride_OTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Enjoy your ride\nwith"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_account_box" />

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mr. RAM KUMAR"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/driver_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_phone"
                android:text="+91 7060743705"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/v_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="UK 04 B2632"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/otp_ride"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ride OTP 2056"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <include layout="@layout/zippe_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/pick_place"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="pick POINT"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_forward" />

                <TextView
                    android:id="@+id/drop_place"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="DROP POINT"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/share_ride_details"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_share"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="share ride details"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/emergency"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_emergency_call"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="emergency support"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/track_your_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_location"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="track your location"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <ImageButton
                android:id="@+id/end_ride"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/end_ride" />
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>