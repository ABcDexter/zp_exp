<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_rent_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Change Drop Details"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txtsupern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/layoutZippeee"
                android:layout_gravity="center"
                android:text="please note that you will be charged extra for any change. "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rect_box_outline" />


            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:id="@+id/txt_drop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layoutZippeee"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drop_hub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="change DROP POINT"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/txt_drop"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:weightSum="2">

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="start"
                    android:padding="5dp"
                    android:text="change no of Hours"
                    android:textAllCaps="true"
                    android:textSize="23sp" />
            </LinearLayout>


            <Button
                android:id="@+id/update_data"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bkg"
                android:scaleType="centerInside"
                android:text="Update"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>