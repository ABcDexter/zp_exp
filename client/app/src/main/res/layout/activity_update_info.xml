<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_rent_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="please note"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:id="@+id/txtP"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/txtsupern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:text="You will be charged extra if you extend your rental time."
                android:textAllCaps="true"
                android:textSize="20sp"
                android:layout_below="@id/txtP"/>

            </RelativeLayout>
            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="50dp" />

            <LinearLayout
                android:id="@+id/txt_drop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@id/rl_hours"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drop_hub"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="change DROP POINT"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_hours"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@id/layoutZippeee"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rect_box_outline"
                android:weightSum="2">

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableEnd="@drawable/ic_edit"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="change no of Hours"
                    android:textAllCaps="true"
                    android:textSize="23sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/rl_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layoutZippeee"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtc"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Please Pay"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="28dp"
                    android:gravity="center|start"
                    android:text=":"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/update_cost"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:paddingEnd="20dp"
                    android:text="â‚¹ 00.00"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoCost"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </LinearLayout>

            <TextView
                android:id="@+id/upiRental"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/rl_cost"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_bhim"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:text="make payment using upi"
                android:textAllCaps="true"
                android:textSize="23sp" />


            <Button
                android:id="@+id/update_data"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bkg"
                android:scaleType="centerInside"
                android:text="Update"
                android:textSize="20sp" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DUMMY"
    android:id="@+id/dummy"
    android:layout_centerHorizontal="true"
    android:layout_above="@id/update_data"/>
        </RelativeLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>