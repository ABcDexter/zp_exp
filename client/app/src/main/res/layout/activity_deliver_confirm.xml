<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewDC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/txtt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/rajdhani_medium"
                android:text="confirm delivery"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />


            <RelativeLayout
                android:id="@+id/rl_tip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/image_zbee_below"
                android:layout_marginTop="50dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text="Thank your partner"
                    android:textAllCaps="true"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/tip"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/txt"
                    android:drawableStart="@drawable/ic_rupee"
                    android:gravity="center|start"
                    android:hint="Enter Tip"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textColor="@color/txtColor"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoTip"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />

            </RelativeLayout>
            <ImageView
                android:id="@+id/image_zbee"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/layoutZippeee"
                android:src="@drawable/zbee_right" />
            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true" />
            <ImageView
                android:id="@+id/image_zbee_below"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/layoutZippeee"
                android:src="@drawable/zbee_left"
                android:visibility="invisible" />
            <RelativeLayout
                android:id="@+id/rl_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_above="@id/image_zbee"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtc"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text="total payment -"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/txtc"
                    android:drawableStart="@drawable/ic_rupee"
                    android:gravity="center|start"
                    android:text="250"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoPayment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/confirm_btn"
                android:text="@string/disclaimer"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"/>


            <ImageButton
                android:id="@+id/confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/confirm"
                android:textAllCaps="true" />
        </RelativeLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>