<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="#605D5D"
        android:gravity="center"
        android:text="NOT SATISFIED DUE TO"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp" />
    <!--<TextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="dfghjklp[ouytfghjklpoiuytfcbjkl;oiuyfdxvn,"
        android:textAllCaps="false"
        android:textColor="@color/txtColor"
        android:textSize="18sp" />-->
    <CheckBox
        android:id="@+id/attitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_head"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Attitude of driver"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginStart="5dp"/>

    <CheckBox
        android:id="@+id/condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/attitude"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Vehicle condition"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginStart="5dp" />

    <CheckBox
        android:id="@+id/clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/condition"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Vehicle cleanliness"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clean"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:paddingEnd="15dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clean"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="Cancel"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"/>
</RelativeLayout>