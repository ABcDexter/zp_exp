<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="#605D5D"
        android:gravity="center"
        android:text="I am not satisfied because"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/attitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_head"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Attitude of driver"
        android:textColor="#000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/attitude"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Vehicle condition"
        android:textColor="#000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/condition"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Vehicle cleanliness"
        android:textColor="#000"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/clean"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:text="Any other"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/specify"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/other"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="16dp"
        android:hint="Please Specify"
        android:textSize="18sp"
        android:maxLines="2"
        android:paddingStart="15dp"
        android:paddingEnd="5dp"
        android:background="#E6E3E3"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/specify"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Submit"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>