<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="21dp"
    android:layout_marginEnd="21dp"
    android:background="@drawable/rect_box_outline"
    android:backgroundTint="#ffffff"
    android:orientation="vertical"
    android:paddingStart="2dp"
    android:paddingEnd="2dp">

    <View
        android:id="@+id/divide00"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/txt_head"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/package_contents"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divide0"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rl_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E7574">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/documents_books"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/books" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rl_content_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E7574">

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/medicines"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/books" />
    </RelativeLayout>

    <View
        android:id="@+id/divide1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rl_content_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E7574">

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/restaurant_orders"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/food" />
    </RelativeLayout>

    <View
        android:id="@+id/divide2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rl_content_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E7574">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/household_items"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/household" />
    </RelativeLayout>

    <View
        android:id="@+id/divide3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rl_content_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E7574">

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/electronics_electrical"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/electronics" />
    </RelativeLayout>

    <View
        android:id="@+id/divide4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rl_content_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E7574">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:text="@string/clothes_accessories"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/cloths" />
    </RelativeLayout>

    <View
        android:id="@+id/divide5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/rl_content_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7E7574">

        <RelativeLayout
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt6"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginStart="30dp"
                android:gravity="center"
                android:text="@string/other"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:src="@drawable/other" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_specify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/other"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/specify_content"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="90dp"
                android:background="@drawable/rect_box_outline"
                android:cursorVisible="true"
                android:gravity="center|start"
                android:hint="@string/please_specify"
                android:inputType="text"
                android:maxLength="10"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/checkTick"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:src="@drawable/check_colored" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divide6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff" />
</LinearLayout>