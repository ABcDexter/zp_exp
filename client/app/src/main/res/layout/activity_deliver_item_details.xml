<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollViewRentRide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <EditText
                android:id="@+id/add_details"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/rect_box_outline"
                android:gravity="top|center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="Additional details (optional)\neg. Don't ring doorbell"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:textColor="@color/txtColor"
                android:maxLength="150"
                android:scrollHorizontally="false"
                android:layout_above="@id/ln_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_above="@id/layoutZippeee"
                android:layout_marginBottom="50dp"
                android:id="@+id/ln_1">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Fragile"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColor"
                    android:buttonTint="@color/txtColor"
                    android:id="@+id/fr"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Flammable"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColor"
                    android:buttonTint="@color/txtColor"
                    android:id="@+id/fl"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Liquid"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColor"
                    android:buttonTint="@color/txtColor"
                    android:id="@+id/li"/>
            </LinearLayout>


            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerInParent="true" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_below="@id/layoutZippeee"
                android:layout_marginTop="50dp"
                android:id="@+id/ln_2">
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="keep dry"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColor"
                    android:buttonTint="@color/txtColor"
                    android:id="@+id/kd"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="keep cold"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColor"
                    android:buttonTint="@color/txtColor"
                    android:id="@+id/kc"/>
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="keep warm"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:textColor="@color/txtColor"
                    android:buttonTint="@color/txtColor"
                    android:id="@+id/kw"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ln_2"
                android:text="@string/disclaimer"
                android:textSize="12sp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"/>

            <ImageButton
                android:id="@+id/confirm_deliver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/confirm"
                android:textAllCaps="true" />
        </RelativeLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>