<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rent.ActivityNearestHub"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/close"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please go to the nearest drop point to end your rental"
        android:id="@+id/txt"
        android:paddingStart="4dp"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_above="@id/layoutZippeee"
        android:layout_marginBottom="50dp"/>
    <include
        android:id="@+id/layoutZippeee"
        layout="@layout/zippe_logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerInParent="true" />


    <LinearLayout
        android:id="@+id/ll_hub1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rect_box_outline"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/layoutZippeee">

        <TextView
            android:id="@+id/hub1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:text="Police Station"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dst1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center|end"
            android:paddingEnd="20dp"
            android:text="2 km"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/loc1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_location" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hub2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rect_box_outline"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/ll_hub1">

        <TextView
            android:id="@+id/hub2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1.5"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:text="hanuman temple"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dst2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:gravity="center|end"
            android:paddingEnd="20dp"
            android:text="3 km"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/loc2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_location" />
    </LinearLayout>

</RelativeLayout>