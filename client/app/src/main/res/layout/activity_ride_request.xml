<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_location_selection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">


            <ImageView
                android:id="@+id/image_zbee"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/layoutZippeee"
                android:src="@drawable/zbee_right" />

            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/image_zbee_below"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/layoutZippeee"
                android:src="@drawable/zbee_left"
                android:visibility="invisible"/>

            <RelativeLayout
                android:id="@+id/rl_cost"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@id/image_zbee"
                android:layout_marginBottom="50dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:text="cost estimate :"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:id="@+id/txtc"/>
                <TextView
                    android:id="@+id/cost_estimate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center|start"
                    android:drawableStart="@drawable/ic_rupee"
                    android:text="XX"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/txtc"
                    android:textAllCaps="true"
                    android:textSize="20sp" />
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoCost"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@id/rl_cost"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center|start"
                    android:text="approx ride mins :"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:id="@+id/txtt"/>
                <TextView
                    android:id="@+id/time_estimate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center|start"
                    android:text="XX"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/txtt"
                    android:textAllCaps="true"
                    android:textSize="20sp" />
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoTime"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ln"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/image_zbee_below"
                android:layout_marginTop="50dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/pick_info"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="pick POINT"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_forward" />

                <TextView
                    android:id="@+id/drop_info"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="DROP POINT"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

            </LinearLayout>
<LinearLayout
    android:id="@+id/ln2"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_below="@+id/ln"
    android:layout_marginTop="30dp"
    android:background="@drawable/rect_box_outline"
    android:orientation="horizontal"
    android:weightSum="2">
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center|start"
        android:textAlignment="center"
        android:text="riders : "
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/ridersInfo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center|start"
        android:textAlignment="center"
        android:text="1"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_weight="1"/>
</LinearLayout>


            <ImageButton
                android:id="@+id/confirm_ride_book"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="-2dp"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/confirm"
                android:textAllCaps="true" />


        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>