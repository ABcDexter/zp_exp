<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_ride_OTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="your ride is confirmed \nwith"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_account_box"
                    android:id="@+id/photo_driver"/>

                <TextView
                    android:id="@+id/driver_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/photo_driver"
                    android:text="Mr. XYZ"
                    android:layout_marginStart="20dp"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:layout_marginTop="35dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/driver_name"
                    android:layout_toEndOf="@id/photo_driver"
                    android:id="@+id/rl_p"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/driver_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+91 7060743705"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phone"
                        android:layout_toEndOf="@id/driver_phone"
                        android:layout_marginStart="10dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>


                <TextView
                    android:id="@+id/v_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="UK 04 B2632"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/txtv"
                    android:layout_below="@id/rl_p"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/txtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="VEH. NO. :"
                    android:textAllCaps="true"
                    android:textSize="18sp"
                    android:layout_toEndOf="@id/photo_driver"
                    android:layout_below="@id/rl_p"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="RIDE OTP  :"
                        android:layout_marginStart="20dp"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_toEndOf="@+id/photo_driver"
                        android:layout_below="@id/v_no"
                        android:id="@+id/txt"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/otp_ride"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="2056"
                        android:layout_marginStart="20dp"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/txt"
                        android:layout_below="@id/v_no"
                        android:layout_marginTop="5dp"/>

            </RelativeLayout>



            <include layout="@layout/zippe_logo"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_box_outline">

                <TextView
                    android:id="@+id/pick_place"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="pick POINT"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_toStartOf="@+id/infoPick"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoPick"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_box_outline"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/drop_place"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="DROP POINT"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_toStartOf="@+id/infoDrop"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoDrop"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtr"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text="ride time"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:paddingStart="7dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text=":"
                    android:layout_marginStart="28dp"
                    android:textAllCaps="true"
                    android:textSize="23sp"/>

                <TextView
                    android:id="@+id/ride_estimate_otp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:paddingEnd="20dp"
                    android:gravity="center|end"
                    android:text="75 min"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoTime"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtc"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text="cost estimate"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:paddingStart="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text=":"
                    android:layout_marginStart="28dp"
                    android:textAllCaps="true"
                    android:textSize="23sp"/>
                <TextView
                    android:id="@+id/cost_estimate_otp"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/txtc"
                    android:gravity="center|end"
                    android:text="250 "
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:paddingEnd="20dp"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoCost"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@drawable/rect_box_outline">
                <TextView
                    android:id="@+id/txt_driver"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="driver arriving in"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text=":"
                    android:textAllCaps="true"
                    android:textSize="23sp"/>
                <TextView
                    android:id="@+id/trackDriver"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="xxx mins"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:paddingStart="20dp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/infomins"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ic_info" />
            </RelativeLayout>
            <ImageButton

                android:id="@+id/cancel_ride_booking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/cancel" />
           <!-- <Button
                android:id="@+id/give_otp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:background="@drawable/btn_bkg"
                android:text="GIVE OTP" />-->
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>