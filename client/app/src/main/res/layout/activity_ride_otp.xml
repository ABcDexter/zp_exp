<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView_ride_OTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="your ride is confirmed \nwith"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_account_box" />

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mr. XYZ"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/driver_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_phone"
                android:text="+91 7060743705"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/v_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="UK 04 B2632"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ride OTP :"
                    android:textAllCaps="true"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/otp_ride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:text="2056"
                    android:textAllCaps="true"
                    android:textSize="18sp" />
                <!--TODO remove this button-->
                <Button
                    android:id="@+id/give_otp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:layout_marginStart="20sp"
                    android:background="@drawable/btn_bkg"
                    android:text="GIVE OTP" />
            </LinearLayout>

            <include layout="@layout/zippe_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/pick_place"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="pick POINT"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_forward" />

                <TextView
                    android:id="@+id/drop_place"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="DROP POINT"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_cost"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layoutZippeee"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtc"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text="cost estimate -"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/cost_estimate_otp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@+id/txtc"
                    android:drawableStart="@drawable/ic_rupee"
                    android:gravity="center|start"
                    android:text="250 "
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoCost"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtr"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center|start"
                    android:text="ride mins -"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/ride_estimate_otp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/txtr"
                    android:gravity="center|start"
                    android:text="75 min"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoTime"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </RelativeLayout>


            <!--<TextView
                android:id="@+id/trackDriver"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:drawableEnd="@drawable/ic_location"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="track driver location"
                android:textAllCaps="true"
                android:textSize="23sp" />-->

            <ImageButton

                android:id="@+id/cancel_ride_booking"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_bkg"
                android:padding="15dp"
                android:scaleType="centerInside"
                android:src="@drawable/cancel" />
        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>