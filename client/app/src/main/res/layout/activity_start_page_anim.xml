<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background1"
    tools:context=".ActivityWelcome">

    <TextView
        android:id="@+id/tx_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="HI!"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tx_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_hi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text=" I AM"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/iv_zippee"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@id/zippe_logo"
        android:src="@drawable/zbee_right" />

    <ImageView
        android:id="@+id/zippe_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/zippe_logo" />

    <ImageView
        android:id="@+id/iv_zippee_bottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/zippe_logo"
        android:src="@drawable/zbee_left"/>

    <TextView
        android:id="@+id/txtModule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ride"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45sp"
        android:text="CHOOSE MODULE"
        android:textColor="@android:color/white"
        android:textSize="23sp"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="RIDE"
            android:textColor="@color/txtColor"
            android:textSize="23sp"
            android:textStyle="bold"
            android:background="@drawable/btn_bkg"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:id="@+id/btn_ride"
            android:layout_above="@+id/btn_rent"
            android:layout_marginBottom="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_rent"
            android:text="RENT"
            android:textStyle="bold"
            android:textColor="@color/txtColor"
            android:textSize="23sp"
            android:background="@drawable/btn_bkg"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentBottom="true"/>



</RelativeLayout>