<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Origin Information"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <Button
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bkg"
                android:text="View in map"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/layout_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/map"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtr"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Name"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="28dp"
                    android:gravity="center|start"
                    android:text=":"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/src_per"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:maxLength="10"
                    android:paddingEnd="20dp"
                    android:text="XYZ"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoName"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layout_name"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtadd"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Address"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="28dp"
                    android:gravity="center|start"
                    android:text=":"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/src_add"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:maxLength="10"
                    android:paddingEnd="20dp"
                    android:text="XYZveferertrttrtrrtgtrgtrgtrgtrgtrgtrgt"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoAdd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_land"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layout_address"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtLand"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Landmark"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="28dp"
                    android:gravity="center|start"
                    android:text=":"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/src_land"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:maxLength="10"
                    android:paddingEnd="20dp"
                    android:text="XYZ"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/infoLand"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_info" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_phn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layout_land"
                android:layout_marginTop="15dp"
                android:background="@drawable/rect_box_outline"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtPhn"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Phone"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="28dp"
                    android:gravity="center|start"
                    android:text=":"
                    android:textAllCaps="true"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/src_phone"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:maxLength="10"
                    android:paddingEnd="20dp"
                    android:text="XYZ"
                    android:textAllCaps="true"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/dialPhn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/ic_phone" />
            </LinearLayout>


            <EditText
                android:id="@+id/enter_otp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/layout_phn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/rect_box_outline"
                android:hint="Enter OTP Provided by User"
                android:inputType="number"
                android:maxLength="4"
                android:padding="5dp"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/txtColor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/enter_otp"
                android:layout_marginTop="150dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/yes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bkg"
                    android:text="Start"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/no"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_bkg"
                    android:text="Reject"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
