<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ActivityHome">

        <RelativeLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/dutyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="124dp"
                android:layout_marginTop="12dp"
                android:checked="false"
                android:text="Off Duty"
                android:textColor="@color/txtColor"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@id/dutyStatus"
                android:text="On Duty"
                android:textColor="@color/txtColor"
                android:textSize="15sp"
                android:textStyle="bold" />
            <include
                android:id="@+id/layoutZippeee"
                layout="@layout/zippe_logo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_above="@id/rl_order"
                android:layout_marginBottom="100dp"/>
            <RelativeLayout
                android:id="@+id/rl_order"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_centerInParent="true">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_alignTop="@+id/new_order"
                    android:translationZ="5dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/notifNo"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/new_order"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/rect_box_solid"
                    android:text="NEW ORDERS"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <Button
                android:id="@+id/order_in_progress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/rl_order"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/rect_box_solid"
                android:text="ORDER IN PROCESS" />

            <Button
                android:id="@+id/completed_orders"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/order_in_progress"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/rect_box_solid"
                android:text="COMPLETED ORDERS" />

            <!--<Button
                android:id="@+id/earnings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/completed_orders"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/rect_box_solid"
                android:text="total earnings" />-->

        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>