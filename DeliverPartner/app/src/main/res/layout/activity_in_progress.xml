<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Origin Information"
                android:textAllCaps="true"
                android:textSize="20sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View in map"
                android:textColor="#000"
                android:id="@+id/map"
                android:layout_below="@id/txt"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/src_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:layout_marginTop="25dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Person"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/src_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/src_per"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Address"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/src_land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/src_add"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Landmark"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/src_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/src_land"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Phone"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/src_phone"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="enter otp provided by user"
                android:textAllCaps="true"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/enter_otp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/txt1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:hint="enter otp"
                android:inputType="number"
                android:maxLength="4"
                android:padding="5dp"
                android:textColor="@color/txtColor"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Accept"
                    android:textColor="#000"
                    android:id="@+id/yes"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Reject"
                    android:textColor="#000"
                    android:id="@+id/no"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
