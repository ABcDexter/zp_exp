<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Delivery En route"
                android:textAllCaps="true"
                android:textSize="20sp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View in map"
                android:textColor="#000"
                android:id="@+id/map"
                android:layout_below="@id/txt"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/dst_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/map"
                android:layout_marginTop="25dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Person"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/dst_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dst_per"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Address"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/dst_land"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dst_add"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Landmark"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/dst_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dst_land"
                android:layout_marginTop="20dp"
                android:background="@drawable/rect_box_outline"
                android:padding="5dp"
                android:text="Phone"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="23sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Done"
                    android:textColor="#000"
                    android:id="@+id/completed"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Fail"
                    android:textColor="#000"
                    android:id="@+id/failed"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>
